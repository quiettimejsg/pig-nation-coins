{
  "name": "Pig Nation Coins",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
  "type": "module",
    "service_worker": "background.js",
    "persistent": false
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/utils.js", "/extensionState.js", "/heuristicsRedefinitions.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}